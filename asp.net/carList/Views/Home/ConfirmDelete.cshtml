@model Car

<h2>Are you sure you want to delete this car?</h2>

<div>
    <p><strong>Model:</strong> @Model.Model</p>
    <p><strong>Color:</strong> @Model.Color</p>
    <p><strong>Year:</strong> @Model.Year</p>
    <p><strong>Body Type:</strong> @Model.BodyType</p>
</div>

<form method="post" action="@Url.Action("Delete", "Car", new { id = Model.Id })">
    <button type="submit" class="btn btn-danger">Yes, Delete</button>
    <a href="@Url.Action("Index", "Car")" class="btn btn-secondary">Cancel</a>
</form>
